<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <Label fx:id="timerLabel" text="00:00" styleClass="timerClass" layoutX="10" layoutY="20" />
    <VBox layoutX="350" layoutY="20" spacing="8" styleClass="nextBrick" prefWidth="130" prefHeight="120">
        <Label text="NEXT BRICK" styleClass="nextBrickLabel" VBox.vgrow="ALWAYS" StackPane.alignment="CENTER"/>
        <VBox styleClass="nextBrickPanel" alignment="CENTER" VBox.vgrow="ALWAYS">
            <GridPane fx:id="nextBrickPanel" vgap="1" hgap="1" alignment="CENTER"/>
        </VBox>
    </VBox>
    <VBox layoutX="350" layoutY="180" spacing="8" styleClass="nextBrick" prefWidth="130" prefHeight="120">
        <Label text="HOLD BRICK" styleClass="nextBrickLabel" VBox.vgrow="ALWAYS" StackPane.alignment="CENTER"/>
        <VBox styleClass="nextBrickPanel" alignment="CENTER" VBox.vgrow="ALWAYS">
            <GridPane fx:id="holdBrickPanel" vgap="1" hgap="1" alignment="CENTER"/>
        </VBox>
    </VBox>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard" layoutX="100">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="114" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>
    <Label fx:id="scoreLabel" text="Score: 0" styleClass="scoreClass" layoutX="140" layoutY="500" />
    <Label fx:id="highScoreLabel" styleClass="highScoreClass" layoutX="140" layoutY="530" />
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>